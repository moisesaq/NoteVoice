<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apaza.moises.notevoice.fragment.ImageFragment"
    android:padding="@dimen/paddingMinGlobal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:scaleType="center"
                android:background="@color/whiteSmoke"
                android:src="@mipmap/ic_image_grey600_48dp"/>

            <ImageButton
                android:id="@+id/editImage"
                style="@style/ImageButtonMoises"
                android:src="@mipmap/ic_pencil_grey600_24dp"
                android:layout_gravity="bottom|right"/>

        </FrameLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/marginMediumGlobal"
            android:layout_marginRight="@dimen/marginMediumGlobal">

            <EditText
                android:id="@+id/descriptionImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/description"
                android:inputType="textAutoComplete"
                android:singleLine="false"/>

        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:id="@+id/ok" />
    </LinearLayout>

</FrameLayout>
