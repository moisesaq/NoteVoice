<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/heightViewPagerAction"
    android:paddingLeft="@dimen/paddingMaxGlobal"
    android:paddingRight="@dimen/paddingMaxGlobal"
    android:background="@color/green_light"
    android:layout_gravity="center">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilTextNote"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <EditText
            android:id="@+id/textNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Write here your note"
            android:lines="3"
            android:gravity="top|left"/>

    </android.support.design.widget.TextInputLayout>

    <ImageButton
        android:id="@+id/ok"
        style="@style/ImageButtonCircleMoises"
        android:src="@mipmap/ic_play_box_outline_white_24dp"
        android:layout_gravity="center"/>

</LinearLayout>